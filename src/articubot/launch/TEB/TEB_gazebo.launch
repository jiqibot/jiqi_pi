<launch>

    <!--  ************** Global Parameters ***************  -->
    <param name="/use_sim_time" value="true"/>
    <arg name="paused" default="false" />
    <arg name="use_sim_time" value="true" />
    <arg name="gui" default="true" />
    <arg name="world_file" default="$(find articubot)/worlds/basic_maze.world"/>

    <param name="robot_description" command="$(find xacro)/xacro $(find articubot)/description/robot.urdf.xacro"/>
    <!-- <param name="robot_description" command="$(find xacro)/xacro $(find articubot)/jiqi_desc/jiqi_bot.urdf.xacro"/> -->
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="true" output="screen"/>

    <!--  ************** Stage Simulator ***************  -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="paused" value="$(arg paused)" />
        <arg name="use_sim_time" value="$(arg use_sim_time)" />
        <arg name="gui" value="$(arg gui)" />
        <arg name="world_name" value="$(arg world_file)"/>
    </include>

    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find articubot)/rviz/teb_config.rviz"/>
    <node name="spawner" pkg="gazebo_ros" type="spawn_model" output="screen" args="-param robot_description -urdf -model robot"/>

        <!--  ************** Navigation ***************  -->
    <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
        <rosparam file="$(find articubot)/config/costmap_base_params.yaml" command="load" ns="global_costmap" /> 
        <rosparam file="$(find articubot)/config/costmap_base_params.yaml" command="load" ns="local_costmap" />
        <rosparam file="$(find articubot)/config/local_costmap.yaml" command="load" />
        <rosparam file="$(find articubot)/config/global_costmap.yaml" command="load" /> 
        <rosparam file="$(find articubot)/config/teb_local_planner_params.yaml" command="load" />
        <!-- <rosparam file="$(find articubot)/config/costmap_converter_params.yaml" command="load" /> -->
        

        <param name="base_global_planner" value="global_planner/GlobalPlanner" />
        <param name="planner_frequency" value="1.0" />
        <param name="planner_patience" value="5.0" />

        <param name="base_local_planner" value="teb_local_planner/TebLocalPlannerROS" />
        <param name="controller_frequency" value="5.0" />
        <param name="controller_patience" value="15.0" />
    </node>


    <!--  ****** Mapping *****  -->

    <node pkg="hector_mapping" type="hector_mapping" name="hector_mapping" output="screen">
        <param name="pub_map_odom_transform" value="true"/>
        <param name="map_frame" value="map" />
        <param name="base_frame" value="base_link" />
        <param name="odom_frame" value="base_link" />
        <!-- <param name="pub_map_scanmatch_transform" value="true" />
        <param name="tf_map_scanmatch_transform_frame_name" value="odom" /> -->
        <param name="scan_subscriber_queue_size" value="60" />
    </node>
    
</launch>